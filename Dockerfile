#базовый образ для го
FROM golang:1.23

#устанавливаем рабочюю директорию внутри контейнера
WORKDIR /app

#коипруем все файлы проекта в контейнер
COPY . .

#загружаем все зависимости
RUN go mod tidy

#комплируем приложение
RUN go build -o main cmd/main.go 

#указываем команду для запуска прилодения
CMD ["/app/main"]
